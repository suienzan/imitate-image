{
  "name": "Imitate Image",
  "version": "0.5.1",
  "manifest_version": 3,
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": ["*://i.pximg.net/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"]
    }
  ]
}
