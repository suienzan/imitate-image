{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "webworker"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*"]
}
